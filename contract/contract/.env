#!/bin/bash

# Prompt for user input
read -p "Enter your Deployer's Private Key: " DEPLOYER_PRIVATE_KEY
read -p "Enter your Owner Address: " OWNER_ADDRESS
read -p "Enter DLP Name: " DLP_NAME
read -p "Enter DLP Token Name: " DLP_TOKEN_NAME
read -p "Enter DLP Token Symbol: " DLP_TOKEN_SYMBOL

# Write to .env file
echo "DEPLOYER_PRIVATE_KEY=$DEPLOYER_PRIVATE_KEY" > .env
echo "OWNER_ADDRESS=$OWNER_ADDRESS" >> .env
echo "SATORI_RPC_URL=https://rpc.satori.vana.org" >> .env
echo "DLP_NAME=$DLP_NAME" >> .env
echo "DLP_TOKEN_NAME=$DLP_TOKEN_NAME" >> .env
echo "DLP_TOKEN_SYMBOL=$DLP_TOKEN_SYMBOL" >> .env

echo ".env file created with the provided values."
